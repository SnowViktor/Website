---
import type { CollectionEntry, CollectionKey } from "astro:content";
import LayoutsTime from "@components/LayoutsTime.astro";
import Link from "@components/ui/Link.astro";
import Tag from "@components/ui/Tag.astro";

interface Props {
  article: CollectionEntry<CollectionKey>;
}
const { article } = Astro.props;
const { title, description, pub_date, tags } = article.data;
---

<article class="post-card">
  <div class="content">
    <div class="meta">
      <LayoutsTime date={pub_date} />
      <div class="tags-scroll">
        <div class="tags">
          {tags.slice(0, 3).map((tag) => <Tag tag={tag} />)}
          {tags.length > 3 && <span class="more">+{tags.length - 3}</span>}
        </div>
      </div>
    </div>
    <Link href={`/articles/${article.id.split("/").pop()}`} class="title-link">
      <h3>{title}</h3>
    </Link>
    <p class="description">{description}</p>
  </div>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    padding: 1.5em;
    border: 1px solid var(--neutral-700);
    border-radius: var(--border-radius-medium);
    background-color: var(--neutral-800);
    transition:
      transform var(--transition-duration) var(--transition-timing-function),
      border-color var(--transition-duration);

    &:hover {
      transform: translateY(-2px);
      border-color: var(--neutral-300);
    }
  }

  .meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.5em;
    color: var(--neutral-400);
    font-size: 0.85em;
    gap: 1em;
    overflow: hidden; /* Prevent overflow */
  }

  .tags-scroll {
    flex: 1;
    overflow: hidden;
    min-width: 0;
  }

  .tags {
    display: flex;
    gap: 0.5em;
    flex-wrap: wrap; /* efficient use of space on desktop */
  }

  .more {
    font-size: 0.9em;
    opacity: 0.7;
    align-self: center;
  }

  h3 {
    margin: 0 0 0.5em;
    font-size: 1.5em;
    line-height: 1.3;
    text-align: left;
    text-wrap: unset;
  }

  /* Override Link style for title */
  .title-link {
    color: var(--neutral-100);

    &:hover {
      color: var(--neutral-300);
    }
  }

  .description {
    margin: 0;
    color: var(--neutral-300);
    font-size: 0.95em;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Mobile Constraint */
  @media (max-width: 768px) {
    .meta {
      justify-content: flex-start;
    }

    .tags {
      flex-wrap: nowrap; /* No wrapping on mobile */
      overflow-x: auto;
      scrollbar-width: none;
      mask-image: linear-gradient(to right, black 85%, transparent 100%);
    }
  }
</style>
