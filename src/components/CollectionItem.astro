---
import type { CollectionEntry, CollectionKey } from "astro:content";
import LayoutsTime from "@components/LayoutsTime.astro";
import Link from "@components/ui/Link.astro";
import Tag from "@components/ui/Tag.astro";
import { Image } from "astro:assets";

interface Props {
  article: CollectionEntry<CollectionKey>;
}
const { article } = Astro.props;
const { title, description, pubDate, category, heroImage } = article.data;
---

<article class="post-card">
  <div class="content">
    <div class="meta">
      <LayoutsTime date={pubDate} />
      <div class="tags">
        {category.map((cat) => <Tag tag={cat} />)}
      </div>
    </div>
    <Link href={`/articles/${article.id}`} class="title-link">
      <h3>{title}</h3>
    </Link>
    <p class="description">{description}</p>
  </div>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    padding: 1.5em;
    border: 1px solid var(--neutral-700);
    border-radius: var(--border-radius-medium);
    background-color: var(--neutral-800);
    transition:
      transform var(--transition-duration) var(--transition-timing-function),
      border-color var(--transition-duration);

    &:hover {
      transform: translateY(-2px);
      border-color: var(--primary-300);
    }
  }

  .meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.5em;
    color: var(--neutral-400);
    font-size: 0.85em;
  }

  .tags {
    display: flex;
    gap: 0.5em;
  }

  h3 {
    margin: 0 0 0.5em;
    font-size: 1.5em;
    line-height: 1.3;
  }

  /* Override Link style for title */
  .title-link {
    color: var(--neutral-100);

    &:hover {
      color: var(--primary-300);
    }
  }

  .description {
    margin: 0;
    color: var(--neutral-300);
    font-size: 0.95em;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
