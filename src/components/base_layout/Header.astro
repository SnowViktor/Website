<header>
  <p></p>
</header>

<style>
  header {
    align-items: center;
    color: var(--color-text-tertiary);
    display: flex;
    font: 600 16px/1 var(--font-serif);
    left: 50%;
    max-width: var(--max-width);
    position: fixed;
    transform: translateX(-50%);
    height: var(--header-height);
    justify-content: center;
    width: 100%;
    z-index: 1;

    &::before {
      backdrop-filter: blur(2px);
      background-color: var(--color-base-translucent);
      content: "";
      height: 100%;
      position: absolute;
      width: inherit;
      z-index: -1;
    }
  }

  p {
    margin: 0;
    opacity: 0;
    text-align: center;
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    width: calc(100% - 2 * 42px); /* 42px is the width of the a */

    &.visible {
      opacity: 1;
    }
  }
</style>

<script>
  const p = document.querySelector("header p") as HTMLParagraphElement;
  const h1 = document.querySelector("h1") as HTMLHeadingElement;

  p.ariaLabel = h1.textContent;
  p.textContent = h1.textContent;

  function handleScroll() {
    const h1Bottom = h1.getBoundingClientRect().bottom;
    p.classList.toggle("visible", h1Bottom < 0);
  }

  window.addEventListener("scroll", handleScroll);
  handleScroll();
</script>
