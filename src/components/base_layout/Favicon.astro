---
const iconSizes = [48];
const appleIconSizes = [192];
const allSizes = [...iconSizes, ...appleIconSizes];
---

{
  allSizes.map((size) => (
    <link
      rel={iconSizes.includes(size) ? "icon" : "apple-touch-icon"}
      type="image/png"
      sizes={`${size}x${size}`}
      href={`/favicons/favicon-${size}.png`}
    />
  ))
}
