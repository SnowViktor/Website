---
import type { CollectionEntry, CollectionKey } from "astro:content";

interface Props {
    article: CollectionEntry<CollectionKey>;
}
const { article } = Astro.props;

const collectionPath: string = article.collection
    .replace(/([a-z0-9])([A-Z])/g, "$1-$2")
    .toLowerCase();
const frontmatter = article.data;
const formatPubDate: string = frontmatter.pubDate
    .toISOString()
    .substring(0, 10)
    .replace(/-/g, "/");
---

<a href={`/articles/${collectionPath}/${article.id}`}>
    <p>{frontmatter.title ? frontmatter.title : "ã€‡"}</p>
    <span aria-hidden="true"></span>
    <time datetime={frontmatter.pubDate.toISOString()}>{formatPubDate}</time>
</a>

<style>
    a {
        align-items: center;
        border-radius: 0.75em;
        display: flex;
        justify-content: space-between;
        padding: 0.25em 0.75em;
        transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);

        &:focus-visible,
        &:hover {
            background-color: var(--color-display);
        }

        &:active {
            transform: scale(0.98);
        }
    }

    p {
        margin: 0;
        white-space: nowrap;
    }

    span {
        border: 1px dashed var(--color-hr);
        margin: 0 0.5em;
        width: 100%;
    }

    time {
        color: var(--color-time);
    }

    @media (max-width: 700px) {
        a {
            align-items: start;
            flex-direction: column;
            line-height: 1.3;
            padding: 0.6em 0.75em 0.5em;
        }

        span {
            display: none;
        }
    }
</style>
