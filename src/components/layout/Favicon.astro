---
const iconSizes = [32, 48, 64, 96, 128, 192];
const appleIconSizes = [180, 192];

/*
media="(prefers-color-scheme: light)"
media="(prefers-color-scheme: dark)"
media="(prefers-color-scheme: no-preference)"
*/
---

{
    iconSizes.map((size: number) => (
        <link rel="icon" type="image/png" sizes={`${size}x${size}`} href={`/favicons/favicon-dark-${size}.png`} />
    ))
}
{
    appleIconSizes.map((size: number) => (
        <link rel="apple-touch-icon" type="image/png" sizes={`${size}x${size}`} href={`/favicons/favicon-dark-${size}.png`} />
    ))
}
