<div id="hamburger" tabindex="0">
    <span></span>
    <span></span>
    <span></span>
</div>

<style>
    @media (width <= 600px) {
		#hamburger {
			cursor: pointer;
			display: flex;
			flex-direction: column;
			height: 30px;
			justify-content: space-between;
			padding: 2.6px;
			width: 30px;

			&.expand span {
				&:nth-of-type(1) {
					transform: rotate(-45deg) translate(-10px, 6.5px);
					width: 36px;
				}

				&:nth-of-type(2) {
					transform: scale(0, 0);
				}

				&:nth-of-type(3) {
					transform: rotate(45deg) translate(-10px, -6.5px);
					width: 36px;
				}
			}

			span {
				background-color: var(--color-primary-0);
				border-radius: 1px;
				height: 6px;
				transition: all 350ms ease;
				width: 30px;
			}
		}
	}
</style>
