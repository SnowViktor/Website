---
const pages = [
    ["", "首頁"],
    ["articles", "文章"],
    ["tools", "工具"],
];
---

<nav id="nav">
	{
		pages.map((page) => (
			<a href={`/${page[0]}`}>{page[1]}</a>
		))
	}
</nav>

<style>
	#nav {
		display: flex;
		font-family: var(--font-serif);
		font-weight: 700;
		gap: 0.5em;
	}

	a {
		position: relative;

		&::after {
			background: var(--color-primary-0);
			content: "";
			display: block;
			height: 2px;
			left: 50%;
			position: absolute;
			top: 90%;
			transition: 300ms all cubic-bezier(0.18, 0.89, 0.32, 1.28);
			width: 0;
		}
		
		&:focus-visible::after,
		&:hover::after {
			left: 0;
			width: 100%;
		}
	}

	@media (width <= 600px) {
		#nav {
			background-color: var(--color-base);
			flex-direction: column;
			height: 0;
			opacity: 0;
			overflow-y: hidden;
			position: absolute;
			text-align: center;
			top: var(--header-padding-box-height);
			transition: all 350ms cubic-bezier(0.22, 0.61, 0.36, 1);
			width: 100%;

			&.expand {
				gap: 1em;
				height: calc(100vh - var(--header-padding-box-height));
				opacity: 1;
			}
		}

		a:hover::after {
			width: 0;
		}
	}
</style>
