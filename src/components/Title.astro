<style>
    @keyframes move {
        from {
            text-shadow: 0px 0px var(--color-primary-text-decoration);
            transform: translate(-1px, 1px);
        }
        to {
            text-shadow: -2px 2px var(--color-primary-text-decoration);
            transform: translate(1px, -1px);
        }
    }

    a {
        color: var(--color-primary-title);
        font-weight: 900;
        user-select: none;

        span {
            animation: 1s move cubic-bezier(0.8, 0, 0.2, 1) infinite alternate;
            display: inline-block;
            transform: translate(-1px, 1px);

            &:nth-of-type(odd) {
                animation-delay: 0s;
            }

            &:nth-of-type(even) {
                animation-delay: 0.25s;
            }

            &:nth-of-type(2),
            &:nth-of-type(3),
            &:nth-of-type(4),
            &:nth-of-type(7),
            &:nth-of-type(8),
            &:nth-of-type(9),
            &:nth-of-type(10) {
                margin-left: -6px;
            }

            &:nth-of-type(5) {
                margin-left: -4px;
            }

            &:nth-of-type(6) {
                margin-left: -5px;
            }
        }
    }
</style>