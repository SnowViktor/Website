---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
    src: string;
    alt: string;
    id: string;
    tabindex: string;
}

const { src, alt, id, tabindex } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpg,png,svg}');
if (!images[src]) throw new Error(`"${src}" does not exist in glob: "src/assets/*.{jpg,png,svg}"`);
---

<Image src={images[src]()} alt={alt} id={id} tabindex={tabindex} />