---
import { ClientRouter } from "astro:transitions";
import Favicon from "../components/base_layout/Favicon.astro";
import Fonts from "../components/base_layout/Fonts.astro";
import Footer from "../components/base_layout/Footer.astro";
import Header from "../components/base_layout/Header.astro";
import "../styles/global.css";

interface Props {
	title: string | null;
	description: string;
	headerTitle?: string | null;
}
const { title, description, headerTitle = title } = Astro.props;
---

<html lang="zh-TW" transition:animate="initial">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="SnowViktor" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:site_name" content="SnowViktor" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/og_image.png" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<Fonts />
		<Favicon />
		<ClientRouter />
	</head>
	<body>
		<Header headerTitle={headerTitle} />
		<main>
			<slot />
		</main>
		<hr />
		<Footer />
		<script src="../scripts/main.ts"></script>
	</body>
</html>
