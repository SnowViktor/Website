---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Favicon from '../components/Favicon.astro';

interface Props {
	title: string;
	description: string;
}

let { title } = Astro.props; const { description } = Astro.props;
let Article = '';
if (title.startsWith('Article')) {title = title.replace('Article', ''); Article = 'articles';}
---

<!DOCTYPE html>
<html lang="zh-TW" transition:animate="none">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="google-site-verification" content="ot3YkGUlClAiQEO-1Wrnt9G3Xw35dhwyK-UbajJmq_o" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:site_name" content="SnowViktor" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		{/* <meta property="og:image" content="" */}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@200..900&display=swap" rel="stylesheet">
		<ViewTransitions />
		<Favicon />
	</head>
	<body>
		<Header />
		<hr />
		<main>
			<h1 class={Article}>{title}</h1>
			<slot />
		</main>
		<hr />
		<Footer />
	</body>
</html>