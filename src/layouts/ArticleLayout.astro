---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter, collection } = Astro.props;

const readablePubDate = frontmatter.pubDate.replace(/-/g, " - ");
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
    <article>
        <p id="information">
            {collection}ï¼Ž<time datetime={frontmatter.pubDate}>{readablePubDate}</time>
        </p>
        <h1>{frontmatter.title}</h1>
        <slot />
    </article>
</BaseLayout>

<style>
	article {
        margin: 0 auto;
		max-width: 700px;
	}

    h1, #information {
        font-family: var(--font-serif);
		text-align: center;
    }

    #information {
        font-size: 0.8em;
        font-weight: 500;
    }
</style>
