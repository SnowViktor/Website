---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
    <article>
    	<h1>{frontmatter.title}</h1>
        <slot />
    </article>
</BaseLayout>

<style>
	article {
		font-family: inherit;
		line-height: 2;
		margin: auto;
		max-width: 750px;
	}

    h1 {
        font-family: "Noto Serif TC", serif;
		font-size: 2em;
		max-width:none;
		text-align: center;
    }
</style>
