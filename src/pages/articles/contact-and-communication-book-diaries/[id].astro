---
import { getEntry, render } from "astro:content";
import DiaryLayout from "../../../layouts/DiaryLayout.astro";

const { id } = Astro.params;
if (id === undefined) {
    return Astro.redirect("/404");
}

const ContactAndCommunicationBookDiaries = await getEntry("ContactAndCommunicationBookDiaries", id);
if (ContactAndCommunicationBookDiaries === undefined) {
    return Astro.redirect("/404");
}

const { Content } = await render(ContactAndCommunicationBookDiaries);
---

<DiaryLayout collectionName="聯絡簿日記" titleDate={true} frontmatter={ContactAndCommunicationBookDiaries.data}>
    <Content />
</DiaryLayout>
