---
import { getEntry, render } from "astro:content";
import ArticleLayout from "../../../layouts/ArticleLayout.astro";

const { id } = Astro.params;
if (id === undefined) {
  return Astro.redirect("/404");
}

const entry = await getEntry("ContactAndCommunicationBookDiaries", id);
if (entry === undefined) {
  return Astro.redirect("/404");
}

const { Content } = await render(entry);
---

<ArticleLayout collectionName={"聯絡簿日記"} entry={entry} titlePubDate={true}>
  <Content />
</ArticleLayout>
