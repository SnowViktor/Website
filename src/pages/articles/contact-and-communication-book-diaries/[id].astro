---
import { getEntry, render } from "astro:content";
import ArticleLayout from "../../../layouts/ArticleLayout.astro";

const { id } = Astro.params;
if (id === undefined) {
    return Astro.redirect("/404");
}

const ContactAndCommunicationBookDiaries = await getEntry("ContactAndCommunicationBookDiaries", id);
if (ContactAndCommunicationBookDiaries === undefined) {
    return Astro.redirect("/404");
}

const { Content } = await render(ContactAndCommunicationBookDiaries);
---

<ArticleLayout collectionName="聯絡簿日記" titlePubDate={true} frontmatter={ContactAndCommunicationBookDiaries.data}>
    <Content />
</ArticleLayout>
