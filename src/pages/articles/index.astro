---
import type { CollectionKey } from "astro:content";
import CollectionLayout from "../../layouts/CollectionLayout.astro";
import CollectionsList from "../../components/CollectionsList.astro";

const collections: [CollectionKey, ...string[]][] = [
    ["ContactAndCommunicationBookDiaries", "聯絡簿日記"],
    ["Prose", "散文"],
];
const collectionKey: CollectionKey[] = collections.map(
    (collection) => collection[0],
);
const collectionList: string[][] = collections.map((collection) => [
    collection[0].replace(/([a-z0-9])([A-Z])/g, "$1-$2").toLowerCase(),
    collection[1],
]);
---

<CollectionLayout
    collection={collectionKey}
    title="文章"
    description="【文章列表】"
    annotation={true}
>
    <CollectionsList collectionList={collectionList} />
    <hr />
</CollectionLayout>
