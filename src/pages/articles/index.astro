---
import type { CollectionKey } from "astro:content";

import CollectionLayout from "../../layouts/CollectionLayout.astro";

import CollectionsList from "../../components/page/CollectionsList.astro";

import { collectionKeyToPath } from "../../utils/collection_key_to_path";

const collections = [
    {
        CollectionKey: "ContactAndCommunicationBookDiaries" as CollectionKey,
        CollectionDisplayName: "聯絡簿日記",
    },
    {
        CollectionKey: "Prose" as CollectionKey,
        CollectionDisplayName: "散文",
    },
];
const collectionKey = collections.map((collection) => collection.CollectionKey);
const collectionsList = collections.map((collection) => ({
    CollectionPath: collectionKeyToPath(collection.CollectionKey),
    CollectionDisplayName: collection.CollectionDisplayName,
}));
---

<CollectionLayout
    title="文章"
    description="【文章列表】"
    collectionKey={collectionKey}
    annotation={true}
>
    <CollectionsList collectionsList={collectionsList} />
    <hr />
</CollectionLayout>
