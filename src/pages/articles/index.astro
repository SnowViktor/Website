---
import { collectionKey, collectionDisplayName } from "../../content.config";

import CollectionLayout from "../../layouts/CollectionLayout.astro";

import CollectionsList from "../../components/page/CollectionsList.astro";

import { collectionKeyToPath } from "../../utils/function_collection";

const collectionsList = collectionKey.map((key, index) => ({
    CollectionPath: collectionKeyToPath(key),
    CollectionDisplayName: collectionDisplayName[index],
}));
---

<CollectionLayout
    title="文章"
    description="【文章列表】"
    collectionKey={collectionKey}
    annotation={true}
>
    <CollectionsList collectionsList={collectionsList} />
    <hr />
</CollectionLayout>

<style>
    @media (min-width: 700px) {
        /* --max-width: 700px */
        hr {
            display: none;
        }
    }
</style>
